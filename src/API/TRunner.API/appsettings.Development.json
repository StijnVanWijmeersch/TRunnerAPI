            {
                "Name": "Seq",
                "Args": { "serverUrl": "http://trunner.seq:5341" }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
            "Application": "TRunner.Api"
        }
    }
}
